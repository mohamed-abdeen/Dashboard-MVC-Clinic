@model Secretary
@{
    ViewData["Title"] = "Delete";
}

<h1> Are you sure to Delete this appointment?</h1>
<form asp-action="Delete">
    <input hidden asp-for="patientId" />
    div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PatientName"></label>
        <input class="form-control" asp-for="PatientName" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Birthdate"></label>
        <input class="form-control" asp-for="Birthdate" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="BloodType"></label>
        <input class="form-control" asp-for="BloodType" readonly />
    </div>


    <input type="submit" value="Delete" class="btn btn-danger" />|
    <a asp-action="Index" class="btn btn-light">Cancel</a>

</form>

