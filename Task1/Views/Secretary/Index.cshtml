@model IEnumerable<Secretary>
@{
    ViewData["Title"] = "Index";
}

<h1>Secretary</h1>
<br />
<br />
<a asp-controller="Secretary" asp-action="Create" class="btn btn-primary">Create New Appointment</a>
<br />
@if(Model.Count()>0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(N=>N.PatientName) </th>
                <th>@Html.DisplayNameFor(N=>N.Birthdate) </th>
                <th>@Html.DisplayNameFor(N=>N.BloodType) </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>



            </tr>
        </thead>
        <tbody>
            @foreach (var secretary in Model)
            {
                <tr>
                    <td>@secretary.PatientName</td>
                    <td>@secretary.Birthdate</td>
                    <td>@secretary.BloodType</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@secretary.patientId" class="btn-warning">
                        <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@secretary.patientId class="btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@secretary.patientId class="btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>


                </tr>

            }
        </tbody>
    </table>
}
else
{
<div class="mt-5 alert-warning">
    <h3>Ther is No Appointement</h3>

</div>
}