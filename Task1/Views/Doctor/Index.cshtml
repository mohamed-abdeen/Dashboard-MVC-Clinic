@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
}

<h1>Doctor</h1>
<br />
<br />
<a  asp-action="Create" class="btn btn-primary">Create New </a>
<br />
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(N=>N.Id) </th>
                <th>@Html.DisplayNameFor(N=>N.Name) </th>
                <th>@Html.DisplayNameFor(N=>N.IsActive) </th>
                <th>@Html.DisplayNameFor(N=>N.Email) </th>
                <th>@Html.DisplayNameFor(N=>N.PhoneNumber) </th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>



            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Id</td>
                    <td>@doctor.Name</td>
                    <td>@doctor.IsActive</td>
                    <td>@doctor.Email</td>
                    <td>@doctor.PhoneNumber</td>


                    <td>
                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@doctor.Id class="btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@doctor.Id class="btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>


                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>Ther is No Doctor</h3>

    </div>
}